<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/arrow_layout"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_margin="@dimen/dimen_32dp"
        android:background="@drawable/grey_stroke_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/arrow_left_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left" />
    </LinearLayout>

    <TextView
        android:id="@+id/exchange_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exchange_str"
        android:textSize="@dimen/dimen_24sp"
        android:textStyle="bold"
        android:textColor="@color/secondary_black"
        android:layout_marginEnd="@dimen/dimen_32dp"
        app:layout_constraintBottom_toBottomOf="@+id/arrow_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arrow_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>